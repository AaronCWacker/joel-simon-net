mixin project_mixin(project)
    if 'year' in project
        - project['labels'].push(project['year'])

    if !('hide' in project && project['hide'])

        .project(class=project['labels'])
            -
                var name = project["name"];
                name = name.replace(/\s+/g, '-').toLowerCase();
                var path = project['path'] ? project['path'] : '/'+name+'.html'

            //- .show-on-hover
                //- h2!=project['name']

            a(href=path)
                img(src=project['img'])

            .project_content.show-on-hover
                h2(style='margin-bottom:0px;margin-top:.5em;')!=project['name']

                //- p!=project['description']

                .project_labels
                    each label, i in project['labels']
                        +label_mixin(label)
